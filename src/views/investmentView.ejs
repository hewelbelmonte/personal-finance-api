<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investimentos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Investimentos</h1>

    <form action="/investimentos/new" method="POST">
        <h2>Adicionar Novo Investimento</h2>
        <label for="valor">Valor:</label>
        <input type="number" id="valor" name="valor" step="0.01" required>
        <label for="descricao">Descrição:</label>
        <input type="text" id="descricao" name="descricao" required>
        <button type="submit">Adicionar</button>
    </form>

    <ul>
        <% investimentos.forEach(investimento => { %>
            <li>
                <%= investimento.descricao %> - R$ <%= investimento.valor.toFixed(2) %>
                <a href="/investimentos/edit/<%= investimento.id %>">Editar</a>
                <form action="/investimentos/delete/<%= investimento.id %>" method="POST" style="display:inline;">
                    <button type="submit">Excluir</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <a href="/">Voltar para o início</a>
</body>
</html>
